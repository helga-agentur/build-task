{
  "name": "@joinbox/build-task",
  "version": "2.0.4",
  "description": "Re-usable esbuild/swc and Sass based build tasks for Joinbox projects",
  "main": "./src/main.js",
  "scripts": {
    "test": "npx ava --verbose --watch --serial",
    "sass": "sass -c test/src/sass/main.scss test/src/sass/main2.scss"
  },
  "ava": {
    "files": [
      "src/**/*.unit.mjs",
      "src/**/*.integration.mjs"
    ],
    "ignoredByWatcher": [
      "test/dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joinbox/gulp-tasks.git"
  },
  "author": "Felix Steiner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joinbox/gulp-tasks/issues"
  },
  "homepage": "https://github.com/joinbox/gulp-tasks#readme",
  "dependencies": {
    "@swc/core": "^1.3.20",
    "commander": "^9.4.1",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.15.16",
    "glob": "^8.0.3",
    "resolve": "^1.22.1",
    "sass": "^1.56.1"
  },
  "devDependencies": {
    "@joinbox/eslint-config-joinbox": "^1.0.10",
    "ava": "^5.1.0",
    "del": "^7.0.0"
  }
}

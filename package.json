{
  "name": "@joinbox/build-task",
  "version": "0.4.7",
  "description": "Re-usable gulp 4/webpack build tasks for Joinbox projects",
  "main": "./src/BuildTask.js",
  "scripts": {
    "test": "node node_modules/.bin/ava --verbose",
    "test:dev": "node node_modules/.bin/ava --watch --verbose --serial --fail-fast"
  },
  "ava": {
    "files": [
      "**/*.unit.js",
      "**/*.integration.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "tap": true,
    "failFast": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joinbox/gulp-tasks.git"
  },
  "author": "Felix Steiner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joinbox/gulp-tasks/issues"
  },
  "homepage": "https://github.com/joinbox/gulp-tasks#readme",
  "dependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "autoprefixer": "^9.7.4",
    "ava": "^0.25.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "colors": "^1.4.0",
    "del": "^5.1.0",
    "eslint-loader": "^3.0.3",
    "event-emitter": "^0.3.5",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-print": "^5.0.2",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "node-notifier": "^6.0.0",
    "postcss-calc": "^7.0.2",
    "postcss-pxtorem": "^4.0.1",
    "vinyl-named": "^1.1.0",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "@joinbox/eslint-config-joinbox": "^1.0.8",
    "directory-tree": "^2.2.4",
    "eslint": "^6.8.0"
  }
}

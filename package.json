  "bugs": {
    "url": "https://github.com/joinbox/build-task/issues"
  },
  "homepage": "https://github.com/joinbox/build-task#readme",
  "dependencies": {
    "@swc/core": "^1.3.20",
    "autoprefixer": "^10.4.13",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "core-js": "^3.26.1",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.17.2",
    "glob": "^8.0.3",
    "node-notifier": "^10.0.1",
    "postcss": "^8.4.19",
    "resolve": "^1.22.1",
    "sass": "^1.56.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@joinbox/eslint-config-joinbox": "^1.0.10",
    "ava": "^5.1.0",
    "del": "^7.0.0",
    "eslint": "^7.32.0"
  }

{
  "name": "@joinbox/build-tasks",
  "version": "0.0.1",
  "description": "Re-usable [Gulp 4](https://github.com/gulpjs/gulp/tree/4.0) tasks for Joinbox projects that cover the following file types: - scripts  - styles - images - templates",
  "main": "index.js",
  "scripts": {
    "test": "node node_modules/ava/cli.js --watch --verbose --serial"
  },
  "ava": {
    "files": [
      "**/*.unit.js",
      "**/*.integration.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "tap": true,
    "failFast": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joinbox/gulp-tasks.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joinbox/gulp-tasks/issues"
  },
  "homepage": "https://github.com/joinbox/gulp-tasks#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "autoprefixer": "^8.4.1",
    "ava": "^0.25.0",
    "babel-loader": "^8.0.0-beta.2",
    "browser-sync": "^2.23.7",
    "colors": "^1.2.1",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^7.0.1",
    "gulp-print": "^5.0.0",
    "gulp-sass": "^4.0.1",
    "gulp-sass-glob": "^1.0.9",
    "gulp-sourcemaps": "^2.6.4",
    "node-notifier": "^5.2.1",
    "postcss-calc": "^6.0.1",
    "postcss-pxtorem": "^4.0.1",
    "vinyl-named": "^1.1.0",
    "webpack": "^4.6.0"
  }
}
